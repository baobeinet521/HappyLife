<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:actualImageScaleType="fitCenter"
        app:placeholderImage="@drawable/ic_default"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/avatar"
        android:letterSpacing="0.04"
        android:text="爱运动的小白"
        android:textColor="#171723"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_below="@+id/nickname"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/avatar"
        android:background="@drawable/person_level_bg"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="8dp"
        android:text="Lv3"
        android:textColor="#946300"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/person_edit"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/person_setting"
        android:src="@drawable/person_edit" />

    <ImageView
        android:id="@+id/person_setting"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/person_set" />

    <TextView
        android:id="@+id/enter_space"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-10dp"
        android:background="@drawable/purple_round_bg"
        android:drawableEnd="@drawable/icon_space"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/person_space"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="normal" />

</RelativeLayout>